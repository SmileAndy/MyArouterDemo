<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">




        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="60dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center"

                android:layout_weight="1">
                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@drawable/icon_everyday_activity_home"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="每日活动"
                    android:textColor="#ff8f8f8f"
                    android:textSize="9sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center"

                android:layout_weight="1">
                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@drawable/icon_story_category_home"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="故事分类"
                    android:textColor="#ff8f8f8f"
                    android:textSize="9sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center"

                android:layout_weight="1">
                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@drawable/icon_hot_activity_home"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="热门活动"
                    android:textColor="#ff8f8f8f"
                    android:textSize="9sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center"

                android:layout_weight="1">
                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@drawable/icon_like_home"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="我喜欢"
                    android:textColor="#ff8f8f8f"
                    android:textSize="9sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center"

                android:layout_weight="1">
                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@drawable/icon_download_home"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="下载"
                    android:textColor="#ff8f8f8f"
                    android:textSize="9sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center"

                android:layout_weight="1">
                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@drawable/icon_song_list_home"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="歌单"
                    android:textColor="#ff8f8f8f"
                    android:textSize="9sp"/>
            </LinearLayout>

        </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:background="#f6f144"
        android:gravity="center"
        android:layout_marginTop="7dp"
        android:text="activity"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="故事名称"
        android:textColor="#ff4a4a4a"
        android:layout_marginBottom="3dp"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="故事简介，不超过15字"
        android:textColor="#ff999999"
        android:textSize="14sp"
        android:layout_marginBottom="37dp"
        />


</LinearLayout>